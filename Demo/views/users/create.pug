extends ../layouts/common
block content
    h1 CREATE USER 

    //- thuộc tính cuối dùng chuyển dạng text sang binary khi post file lên
    form(action="/users/create", method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name" required)  
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone" required)
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(type="file", name="avatar")     

        button(class="btn btn-primary mt-3") Create 